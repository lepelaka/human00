@charset "UTF-8";
/* 공통 */
body {margin:0;}
a {text-decoration: none; color:black;}
.wrapper {width: 978px; margin:0 auto;}
.header {padding:30px; color:#eee; background: #333; min-height:50px;}
.header > * {margin:0;}
.header h1 {float:left; width: 300px;}
.header ul {float:right;}
.header li {display: inline-block;}
.header label {font-size: 12px;}
.header label input {padding:5px; width: 50px;}

/* 메뉴 */
.gnb {background: #ddd;}
.gnb ul {margin-top:0;}
.gnb li{display: inline-block; padding:5px; margin:5px 20px;}

.content {clear: both; padding:30px 0; padding-left:94px; }
.content table {width:30%; display: inline-table; margin:20px 50px; table-layout: fixed;}
.content table:nth-child(odd) {margin-right:100px;}
.content table td:first-child {width: 85%}

.write-table {width: 100%;}
.ck-editor__editable {min-height: 300px;}

/* 댓글 */
.reply-wrap { font-size: 13px;}
.reply-header > div {float:left; width: 45px; 
	border-bottom:3px solid #09f; height:22px; padding:5px;}
.reply-header > div+div {float:right; width:913px; border-bottom:1px solid #ccc; 
	text-align: right; height:23px; padding:5px;}
.reply-header button {margin:0; font-size: 13px;}
.reply-content {clear: both; position: relative; padding:15px; border-bottom:1px solid #ccc;}
/* .reply-content > .reply-content-header {margin:15px;} */
.reply-content > .reply-body {width: 830px; min-height:50px;}
.reply-content .reply-btns {position:absolute; top:15px; right:20px;}
.reply-form {text-align: right;}
.reply-form textarea {width: 100%; margin:20px 0;}

.reply-modify {display: none;}



footer {text-align: center; background: #333; color:#eee; padding:15px;}
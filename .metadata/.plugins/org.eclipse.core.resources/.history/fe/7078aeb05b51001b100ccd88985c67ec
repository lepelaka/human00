package chap02;

public class Variable {
	public static void main(String[] args) {
		// 변수?
		// 하나의 값을 저장하기 위한 공간
		
		// 단 하나의 타입
		// 정수를 쓸것이다. 선언! >> 정수만 저장
		// 실수를 쓸것이다.! >> 실수만 저장
		
		int age; // 정수(int)타입의 age이름의 변수 선언
		double value; // 실수(double)타입의 value이름의 변수가 선언
		
		int x, y, z;
		
		// 첫글자영문, $, _
		// 대소문자구분
		// 첫글자 소문자, 단어사이의 구분시 다음단어의 첫글자를 대문자
		// 카멜 표기법
		// 
		
		// 예약어 사용불가
		
		// 명명 규칙
		// 변수, 			클래스, 메서드
		// 첫글자 소문자    대문자  소문자
		// 명사             명사    동사
		int maxSpeed;
		
		int 합계;
		
		int score; // 선언
		score = 90; // 할당
		
		int score2 = 90; // 선언/할당
		
		// 리터럴 (literal)
		
		int val1 = 012; // 8진수
		System.out.println(val1);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
	
	int getTotal(int a, int b) {
		return a+b;
	}
}

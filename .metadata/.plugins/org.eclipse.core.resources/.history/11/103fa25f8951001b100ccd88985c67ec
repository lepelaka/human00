package chap02;

public class Variable3 {
	public static void main(String[] args) {
		// 변수의 사용범위
		// scope
		 
		int value;
		value = 5;
		int result = value + 10;
		System.out.println(result);
		
		int v1 = 15;
		int v2 = 0;
		if(v1 > 10) {
			v2 = v1 - 10;
		}
		
		//int v3 = v1 + v2 + 5;
		
		// 클래스를 배우는 시점에 scope
		
	}
}

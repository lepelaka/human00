package chap02;

public class DigitExam {
	public static void main(String[] args) {
		// 정수 >> 2진수
		// 실수 >> 2진수
		
		// 3.14 연산
		// 3.25 연산
		
//		System.out.println(3.14 + 1);
//		// 0.14 * 2 = 0.28
//		// 0.28 * 2 = 0.56
//		// 0.56 * 2 = 1.12
//		// 0.12 * 2 = 0.24
//		
//		System.out.println(3.25 + 1);
		
		// '1' + '2'
		// ASCII 0 : 48
		// 1 : 49
		// 2 : 50
		// 99
		
		// float = 4byte 실수
		// long = 8byte 정수
		
		// float > long
		System.out.println(Float.MAX_VALUE);
		System.out.println(Long.MAX_VALUE);
		// float의 최대값 340000000000000000000000000000000000000
		// double의 최대값 1.7 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000
		// 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 
		// 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 
		// 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 0000000000 
		// long의 최대값 9223372036854775807
		
		String str = "A";
		char var = str.charAt(0);
		System.out.println(var);
		
		// 참조자료형에 캐스트 연산자를 쓸수 없다.
		System.out.println("" + true + null);
	}
}
